<div class="row justify-content-center">
  <div class="col-md-8">
    <p style="color: green"><%= notice %></p>

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Articles</h1>
      <%= link_to "New article", new_article_path, class: 'btn btn-sm btn-success rounded-0' %>
    </div>
    <div id="articles">
      <% @articles.each do |article| %>
        <div id="<%= dom_id article %>" class="card card-body rounded-0 shadow-sm mb-5">
          <% if article.featured_image.attached? %>
            <%= image_tag article.featured_image %>
          <% end %>
          
          <h2 class="fs-4 fw-bold"><%= link_to article.title, article_path(article), class: 'text-decoration-none text-black' %></h2>

          <hr>
          
          <div class="d-flex justify-content-between">
            <div>
              <strong>Category:</strong> 
              <span class="badge bg-danger"><%= article.category.name %></span>
            </div>
            <div>
              <strong>Published:</strong> 
              <span class="badge bg-primary">
                <%= article.created_at.strftime("%b %d, %Y") %>
              </span>
            </div>
            <div>
              <strong>Published By:</strong> 
              <span class="badge bg-primary">
                <%= article.user.email %>
              </span>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>