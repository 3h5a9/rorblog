<p style="color: green"><%= notice %></p>

<%= render @category %>

<div class="mt-3 d-flex">
  <%= link_to "Edit this category", edit_category_path(@category), class: 'btn btn-sm btn-primary rounded-0 me-2' %>
  <%= link_to "Back to categories", categories_path, class: 'btn btn-sm btn-warning rounded-0 me-2' %>

  <%= button_to "Destroy this category", @category, method: :delete, class: 'btn btn-sm btn-danger rounded-0' %>
</div>