<div class="row justify-content-center">
  <div class="col-md-8">
    <p style="color: green"><%= notice %></p>

    <%= render @article %>

    <div class="mt-3 d-flex">
      <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-sm btn-primary rounded-0 me-2' %>

      <%= link_to "Back to articles", articles_path, class: 'btn btn-sm btn-warning rounded-0 me-2' %>

      <%= button_to "Destroy this article", @article, method: :delete, class: 'btn btn-sm btn-danger rounded-0' %>
    </div>
  </div>
</div>