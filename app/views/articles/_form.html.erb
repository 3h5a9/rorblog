<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control rounded-0 shadow-sm' %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control rounded-0 shadow-sm' %>
  </div>

  <div class="mb-3">
    <%= form.label :featured_image, class: 'form-label' %>
    <%= form.file_field :featured_image, class: 'form-control', type: 'file' %>
  </div>

  <div>
    <%= form.select(:category_id, Category.all.map{|cat| [cat.name, cat.id]} ) %>

  </div>


  <div>
    <%= form.submit(class: 'btn btn-sm btn-primary rounded-0 mt-2') %>
  </div>
<% end %>
