<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Categories</h1>
  <%= link_to "New category", new_category_path, class: 'btn btn-sm btn-success rounded-0' %>
</div>

<div id="categories" class="row">
  <% @categories.each do |category| %>
    <div class="col-md-3">
      <%= render category %>
      <p>
        <%= link_to "Show this category", category, class: 'btn btn-sm btn-success rounded-0' %>
      </p>
    </div>
  <% end %>
</div>

