<div id="<%= dom_id article %>" class="card card-body rounded-0 shadow-sm mb-1">
  <% if article.featured_image.attached? %>
    <%= image_tag article.featured_image %>
  <% end %>
  
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>


  <p>
    <strong>Category:</strong> <span class="badge bg-danger"><%= article.category.name %></span>
  </p>
  <p>
    <strong>Published:</strong> <span class="badge bg-primary"><%= article.created_at.strftime("%b %d, %Y") %></span>
  </p>

</div>
